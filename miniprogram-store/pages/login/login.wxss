/* 门店登录页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
  padding: 60rpx 40rpx;
}

.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-text {
  color: white;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  display: block;
}

.logo-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  display: block;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  color: white;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: block;
}

.login-button {
  width: 100%;
  margin-top: 40rpx;
}

.forgot-password {
  text-align: center;
  margin-top: 32rpx;
}

.forgot-link {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  text-decoration: underline;
}