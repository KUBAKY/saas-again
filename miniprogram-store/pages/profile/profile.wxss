/* 个人中心页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 磨砂玻璃效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 用户信息头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 3px solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
}

.user-details {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.work-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 20rpx;
}

.store-info {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.edit-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

/* 今日工作数据 */
.today-stats {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: flex;
  padding: 30rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}

.stats-item:not(:last-child) {
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.stats-number {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 快捷功能 */
.quick-functions {
  margin-bottom: 40rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.function-item {
  padding: 40rpx 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.function-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin: 20rpx 0 10rpx;
}

.function-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 设置选项 */
.settings-section {
  margin-bottom: 40rpx;
}

.setting-cell {
  background: transparent !important;
  color: white !important;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.logout-btn {
  background: rgba(255, 59, 48, 0.8) !important;
  border: none !important;
  backdrop-filter: blur(10px);
}