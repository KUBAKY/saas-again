/* 销售开单页面样式 */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}

.glass-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 24rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
  padding: 32rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
}

.product-name {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.product-price {
  color: #FFD700;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  display: block;
}

.product-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
  margin-bottom: 20rpx;
  display: block;
}

.cart-summary {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.cart-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.cart-total {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.checkout-button {
  width: 100%;
}

.empty-cart {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}