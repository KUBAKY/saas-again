/* 会员管理页面样式 */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx; /* 为浮动按钮留出空间 */
}

.search-section {
  margin-bottom: 20rpx;
}

.tabs-section {
  margin-bottom: 20rpx;
}

/* 快捷筛选样式 */
.filter-section {
  margin-bottom: 20rpx;
}

.filter-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 24rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
  padding: 24rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  font-weight: 500;
  margin-right: 16rpx;
  min-width: 80rpx;
}

.filter-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.filter-button {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.filter-button.active {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border-color: rgba(255, 255, 255, 0.9);
}

/* 统计信息样式 */
.stats-section {
  margin-bottom: 20rpx;
}

.stats-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 24rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
}

.stats-item {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  color: white;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stats-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 会员列表样式 */
.member-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-item {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 24rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
  padding: 32rpx;
  display: flex;
  align-items: center;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.3);
}

.member-info {
  flex: 1;
}

.member-name {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.member-phone {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-bottom: 8rpx;
  display: block;
}

.member-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.member-expire {
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
}

.member-extra {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.member-type {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.member-remaining {
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
}

.member-coach {
  color: rgba(255, 255, 255, 0.9);
  font-size: 22rpx;
  background: rgba(255, 215, 0, 0.3);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 215, 0, 0.5);
}

.member-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 浮动操作按钮样式 */
.fab-container {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 1000;
}

/* 会员详情弹窗样式 */
.member-detail-popup {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.member-detail-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.detail-avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}

.detail-basic-info {
  flex: 1;
}

.detail-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.detail-phone {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.detail-info-section {
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.detail-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-coach-info {
  background: rgba(255, 215, 0, 0.1);
  border: 1rpx solid rgba(255, 215, 0, 0.3);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
}

.detail-coach-name {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.detail-coach-sessions {
  font-size: 24rpx;
  color: #666;
}

.detail-stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.detail-stat-item {
  text-align: center;
  flex: 1;
}

.detail-stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.detail-stat-label {
  font-size: 24rpx;
  color: #666;
}