/* 会员签到页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 磨砂玻璃效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
}

/* 扫码签到区域 */
.scan-section {
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.scan-header {
  margin-bottom: 40rpx;
  color: white;
}

.scan-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 16rpx 0 8rpx;
  display: block;
}

.scan-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.scan-area {
  margin-bottom: 40rpx;
}

.scan-frame {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
}

.scan-corners {
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
}

.corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid white;
}

.corner.top-left {
  top: 0;
  left: 0;
  border-right: none;
  border-bottom: none;
  border-radius: 20rpx 0 0 0;
}

.corner.top-right {
  top: 0;
  right: 0;
  border-left: none;
  border-bottom: none;
  border-radius: 0 20rpx 0 0;
}

.corner.bottom-left {
  bottom: 0;
  left: 0;
  border-right: none;
  border-top: none;
  border-radius: 0 0 0 20rpx;
}

.corner.bottom-right {
  bottom: 0;
  right: 0;
  border-left: none;
  border-top: none;
  border-radius: 0 0 20rpx 0;
}

.scan-hint {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  text-align: center;
}

.scan-button {
  width: 100%;
  border-radius: 48rpx;
}

/* 手动签到 */
.manual-checkin {
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.manual-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  color: white;
}

.manual-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 12rpx;
}

.search-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.search-results {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.member-name {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.member-number {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.member-phone {
  color: rgba(255, 255, 255, 0.6);
  font-size: 22rpx;
}

.member-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.member-status.active {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.member-status.expired {
  background: rgba(244, 67, 54, 0.2);
  color: #f44336;
}

.member-status.suspended {
  background: rgba(255, 193, 7, 0.2);
  color: #FFC107;
}

.empty-result {
  padding: 60rpx 0;
  text-align: center;
}

/* 章节标题 */
.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
}

/* 签到记录 */
.checkin-records {
  margin-bottom: 40rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-name {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.record-time {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.record-type {
  color: rgba(255, 255, 255, 0.6);
  font-size: 22rpx;
}

.record-status.success {
  color: #4CAF50;
}

.empty-records {
  padding: 60rpx 0;
  text-align: center;
}

/* 签到确认弹窗 */
.checkin-confirm-popup {
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
}

.confirm-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.confirm-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid #f0f0f0;
}

.confirm-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.confirm-number {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.confirm-details {
  margin-bottom: 32rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  color: #666;
  font-size: 28rpx;
}

.detail-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.detail-value.active {
  color: #4CAF50;
}

.detail-value.expired {
  color: #f44336;
}

.detail-value.suspended {
  color: #FFC107;
}

.confirm-actions {
  display: flex;
  gap: 24rpx;
}

.confirm-actions .van-button {
  flex: 1;
}

/* 签到成功弹窗 */
.checkin-success-popup {
  width: 500rpx;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin: 32rpx 0 16rpx;
  display: block;
}

.success-member {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.success-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
  display: block;
}