/* 会员端小程序首页样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 磨砂玻璃效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
}

/* 顶部用户信息 */
.user-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.user-avatar {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.status-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  border-radius: 24rpx;
  padding: 4rpx 12rpx;
}

.status-text {
  color: #333;
  font-size: 20rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.member-number {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.member-level {
  color: #ffd700;
  font-size: 26rpx;
  font-weight: 500;
}

.quick-checkin {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  color: white;
  font-size: 24rpx;
}

/* 状态卡片 */
.status-cards {
  display: flex;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.status-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  text-align: center;
}

.status-number {
  color: white;
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
}

.status-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 章节标题 */
.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more-link {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
}

/* 快捷功能 */
.quick-actions {
  margin-bottom: 40rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  text-align: center;
  color: white;
}

.action-item text {
  margin-top: 16rpx;
  font-size: 26rpx;
}

/* 我的课程 */
.my-courses {
  margin-bottom: 40rpx;
}

.course-scroll {
  white-space: nowrap;
}

.course-item {
  display: inline-block;
  width: 280rpx;
  padding: 32rpx;
  margin-right: 24rpx;
  vertical-align: top;
  white-space: normal;
}

.course-name {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.course-time {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  display: block;
  margin-bottom: 8rpx;
}

.course-coach {
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
  display: block;
  margin-bottom: 20rpx;
}

/* 健身记录 */
.fitness-records {
  margin-bottom: 40rpx;
}

.record-chart {
  display: flex;
  align-items: end;
  justify-content: space-around;
  padding: 40rpx 32rpx;
  height: 200rpx;
}

.chart-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-bar {
  width: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 16rpx 16rpx 0 0;
  min-height: 20rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.chart-bar.active {
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.chart-day {
  color: rgba(255, 255, 255, 0.8);
  font-size: 20rpx;
}

/* 通知公告 */
.notices {
  margin-bottom: 40rpx;
}

.notice-item {
  padding: 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notice-title {
  color: white;
  font-size: 28rpx;
  flex: 1;
}

.notice-date {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

/* 签到弹窗 */
.checkin-popup {
  padding: 80rpx 60rpx;
  text-align: center;
  background: white;
  border-radius: 32rpx;
}

.popup-title {
  color: #333;
  font-size: 36rpx;
  font-weight: 600;
  margin: 32rpx 0 16rpx;
  display: block;
}

.popup-desc {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 48rpx;
  display: block;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .action-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .action-item {
    padding: 32rpx 16rpx;
  }
  
  .status-cards {
    gap: 16rpx;
  }
  
  .status-item {
    padding: 24rpx 16rpx;
  }
}