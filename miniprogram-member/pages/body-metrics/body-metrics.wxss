/* 身体数据记录页面样式 */
.page-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.profile-card {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.profile-header {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.profile-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.profile-details {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.separator {
  color: #ccc;
}

.target-section {
  text-align: center;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 16rpx;
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.target-label {
  font-size: 24rpx;
  color: #667eea;
}

.target-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

.target-section .van-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  color: #667eea;
  opacity: 0.7;
}

/* 当前数据概览 */
.metrics-overview {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.last-updated {
  font-size: 24rpx;
  color: #999;
}

.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.metric-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.metric-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1;
}

.metric-label {
  font-size: 26rpx;
  color: #666;
  line-height: 1.2;
}

.bmi-status {
  font-size: 22rpx;
  font-weight: 500;
}

/* 图表区域 */
.chart-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.chart-tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.chart-tab {
  flex: 1;
  text-align: center;
  padding: 30rpx;
  font-size: 30rpx;
  color: #666;
  background: white;
  position: relative;
  transition: color 0.3s;
}

.chart-tab.active {
  color: #667eea;
  font-weight: 500;
}

.chart-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

.chart-placeholder {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ccc;
}

.chart-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.chart-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.chart-desc {
  font-size: 26rpx;
  color: #999;
}

/* 历史记录 */
.history-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #667eea;
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.history-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #eee;
  position: relative;
}

.history-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 20rpx;
}

.history-data {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.data-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.data-label {
  font-size: 26rpx;
  color: #666;
}

.data-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.history-note {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.history-actions {
  display: flex;
  justify-content: flex-end;
}

.delete-btn {
  font-size: 26rpx;
  color: #f56c6c;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(245, 108, 108, 0.1);
}

.delete-btn:active {
  background: rgba(245, 108, 108, 0.2);
}

/* 空状态 */
.empty-history {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #ccc;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 成就系统 */
.achievements-section {
  margin: 20rpx;
}

.achievements-section .section-title {
  margin: 0 0 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.achievements-scroll {
  white-space: nowrap;
  padding-left: 20rpx;
}

.achievement-item {
  display: inline-block;
  width: 200rpx;
  padding: 30rpx 20rpx;
  margin-right: 20rpx;
  background: white;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  transition: all 0.3s;
  vertical-align: top;
  white-space: normal;
}

.achievement-item.locked {
  opacity: 0.5;
  background: #f5f5f5;
}

.achievement-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.achievement-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
  margin-bottom: 12rpx;
}

.achievement-date {
  font-size: 22rpx;
  color: #667eea;
}

/* 添加数据弹窗 */
.add-dialog {
  padding: 40rpx;
  min-height: 60vh;
  max-height: 80vh;
  overflow-y: auto;
}

.dialog-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.dialog-content {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
}

.metric-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.note-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  line-height: 1.5;
  resize: none;
}

.dialog-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .submit-btn {
  flex: 1;
  padding: 32rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #667eea;
  color: white;
}

/* 目标体重设置 */
.target-input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx;
}

.target-input {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  border: none;
  outline: none;
}

.target-unit {
  font-size: 28rpx;
  color: #666;
}

/* 成就解锁弹窗 */
.achievement-popup {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  min-width: 500rpx;
}

.achievement-popup-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.achievement-popup-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.achievement-popup-desc {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.achievement-popup-btn {
  background: #667eea;
  color: white;
  padding: 30rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}