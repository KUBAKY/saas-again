/* 预约历史页面样式 */
.page-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 搜索区域 */
.search-section {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-bar .van-search {
  flex: 1;
}

.filter-btn {
  width: 80rpx;
  height: 80rpx;
  background: #667eea;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.filter-btn:active {
  background: #5a6fd8;
}

/* 标签页 */
.tabs-container {
  background: white;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 120rpx;
  z-index: 99;
}

.tabs {
  display: flex;
  padding: 0 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: color 0.3s;
}

.tab-item.active {
  color: #667eea;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* 预约列表 */
.booking-list {
  padding: 20rpx 30rpx 0;
}

.booking-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.booking-card:active {
  transform: translateY(2rpx);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.course-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.course-type {
  color: #667eea;
  font-weight: 500;
}

.separator {
  color: #ccc;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-upcoming {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.status-completed {
  background: rgba(103, 194, 58, 0.1);
  color: #67c23a;
}

.status-cancelled {
  background: rgba(245, 108, 108, 0.1);
  color: #f56c6c;
}

/* 预约详情 */
.booking-details {
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-row .van-icon {
  color: #999;
  margin-right: 8rpx;
}

.label {
  color: #666;
  width: 80rpx;
}

.value {
  color: #333;
  font-weight: 500;
  flex: 1;
}

.value.price {
  color: #f56c6c;
  font-weight: 600;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  justify-content: flex-end;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.action-btn {
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  min-width: 140rpx;
  text-align: center;
  transition: all 0.3s;
}

.action-btn.primary {
  background: #667eea;
  color: white;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #333;
}

.action-btn.danger {
  background: #f56c6c;
  color: white;
}

.action-btn.disabled {
  background: #f0f0f0;
  color: #ccc;
}

.action-btn:active:not(.disabled) {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.empty-btn {
  background: #667eea;
  color: white;
  padding: 30rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

/* 加载状态 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #ccc;
  font-size: 28rpx;
}

/* 筛选弹窗 */
.filter-popup {
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.reset-btn {
  font-size: 28rpx;
  color: #667eea;
}

.filter-content {
  margin-bottom: 40rpx;
}

.filter-group {
  margin-bottom: 40rpx;
}

.group-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.date-options, .type-options, .status-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.date-option, .type-option, .status-option {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.date-option.active, .type-option.active, .status-option.active {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border-color: #667eea;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  padding: 32rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #667eea;
  color: white;
}