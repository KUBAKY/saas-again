/* 课程详情页面样式 */
.page-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 课程封面区域 */
.course-header {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.course-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.course-info-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.course-title {
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.course-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.level-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.level-beginner {
  background: #67c23a;
}

.level-intermediate {
  background: #e6a23c;
}

.level-advanced {
  background: #f56c6c;
}

.category, .duration {
  font-size: 28rpx;
  opacity: 0.9;
}

.course-stats {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.3);
}

/* 通用区域样式 */
.section {
  background: white;
  margin: 20rpx 0;
  padding: 40rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.view-more, .add-review {
  font-size: 28rpx;
  color: #667eea;
  font-weight: normal;
}

/* 课程描述 */
.course-description {
  font-size: 32rpx;
  line-height: 1.8;
  color: #666;
  margin-bottom: 30rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border-radius: 40rpx;
  font-size: 26rpx;
}

/* 教练信息卡片 */
.coach-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.coach-card:active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.coach-info {
  flex: 1;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.coach-specialties {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.specialty {
  color: #667eea;
}

.coach-stats {
  display: flex;
  gap: 20rpx;
  font-size: 26rpx;
  color: #999;
}

/* 课程效果列表 */
.benefits-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.benefit-icon {
  width: 36rpx;
  height: 36rpx;
  background: #67c23a;
  color: white;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 6rpx;
}

.benefit-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
}

/* 适用人群列表 */
.requirements-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.requirement-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.requirement-dot {
  color: #667eea;
  font-size: 32rpx;
  line-height: 1;
  margin-top: 8rpx;
}

.requirement-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
}

/* 器材列表 */
.equipment-list {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
}

.equipment-item {
  color: #667eea;
}

/* 时间段选择 */
.time-slots-container {
  white-space: nowrap;
}

.time-slot-item {
  display: inline-block;
  width: 200rpx;
  height: 160rpx;
  margin-right: 20rpx;
  padding: 24rpx;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s;
}

.time-slot-item.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.time-slot-item.disabled {
  background: #f5f5f5;
  color: #ccc;
  border-color: #eee;
}

.slot-date {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.slot-time {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.slot-participants {
  font-size: 24rpx;
  color: #667eea;
}

.disabled .slot-time,
.disabled .slot-participants {
  color: #ccc;
}

.slot-status {
  position: absolute;
  top: 0;
  right: 0;
  background: #f56c6c;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 0 18rpx 0 12rpx;
}

/* 评价列表 */
.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.review-item {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 30rpx;
}

.review-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.review-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.review-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 20rpx;
}

.review-actions {
  text-align: right;
}

.like-btn {
  font-size: 26rpx;
  color: #999;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.no-reviews {
  text-align: center;
  padding: 80rpx 0;
  color: #ccc;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #eee;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  z-index: 100;
}

.price-section {
  flex: 1;
}

.price-info {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.current-price {
  font-size: 44rpx;
  font-weight: 600;
  color: #f56c6c;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.contact-btn, .book-btn {
  padding: 24rpx 40rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.contact-btn {
  background: #f5f5f5;
  color: #333;
  border: none;
}

.book-btn {
  background: #667eea;
  color: white;
  border: none;
  flex: 1;
  min-width: 200rpx;
}

.book-btn.booked {
  background: #f56c6c;
}

.contact-btn:active {
  background: #eee;
}

.book-btn:active {
  opacity: 0.8;
}

/* 弹窗样式 */
.booking-popup, .review-popup {
  padding: 60rpx 40rpx 40rpx;
  max-height: 80vh;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.booking-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.info-item .label {
  width: 120rpx;
  color: #666;
}

.info-item .value {
  color: #333;
  font-weight: 500;
}

.info-item .value.price {
  color: #f56c6c;
  font-weight: 600;
}

.rating-section {
  margin-bottom: 40rpx;
  text-align: center;
}

.rating-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.comment-section {
  margin-bottom: 40rpx;
}

.comment-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn, .submit-btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn, .submit-btn {
  background: #667eea;
  color: white;
}