/* 教练团队页面样式 */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.coaches-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

.coach-card {
  padding: 40rpx;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}

.coach-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.coach-info {
  flex: 1;
}

.coach-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.coach-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.coach-rating {
  display: flex;
  align-items: center;
}

.rating-stars {
  margin-right: 16rpx;
}

.rating-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.coach-specialties {
  margin-bottom: 32rpx;
}

.specialties-title {
  font-size: 28rpx;
  color: white;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.specialties-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.specialty-tag {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.coach-description {
  margin-bottom: 32rpx;
}

.description-title {
  font-size: 28rpx;
  color: white;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.description-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.coach-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.coach-actions {
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.book-button {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
}

.contact-button {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 教练详情弹窗 */
.coach-detail-popup {
  padding: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.detail-header {
  padding: 40rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  position: relative;
}

.close-button {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-content {
  padding: 40rpx;
}

.detail-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.experience-list {
  list-style: none;
  padding: 0;
}

.experience-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.experience-item:last-child {
  border-bottom: none;
}

.experience-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.experience-desc {
  font-size: 26rpx;
  color: #666;
}