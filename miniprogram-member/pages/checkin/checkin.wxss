/* 签到页面样式 */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

.checkin-header {
  text-align: center;
  padding: 60rpx 0;
}

.checkin-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.checkin-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.checkin-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 80rpx 0;
}

.checkin-button {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #667eea, #764ba2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
  margin-bottom: 48rpx;
}

.checkin-button.disabled {
  background: rgba(255, 255, 255, 0.3);
  box-shadow: none;
}

.checkin-icon {
  margin-bottom: 16rpx;
}

.checkin-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.checkin-status {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.stats-section {
  margin-top: 80rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 32rpx;
}

.stat-card {
  padding: 40rpx 24rpx;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.history-section {
  margin-top: 60rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 32rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-date {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}

.history-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.history-reward {
  font-size: 28rpx;
  color: #ffd700;
  font-weight: 500;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 签到成功弹窗 */
.success-popup {
  padding: 60rpx 40rpx;
  text-align: center;
  background: white;
  border-radius: 24rpx;
}

.success-icon {
  margin-bottom: 32rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.success-button {
  width: 100%;
}