/* 个人中心页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 磨砂玻璃效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(31, 38, 135, 0.37);
}

/* 用户信息部分 */
.user-section {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.user-avatar-wrapper {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-edit-icon {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.user-details {
  flex: 1;
}

.user-name {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.member-info {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  display: block;
  margin-bottom: 16rpx;
}

.user-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.2;
}

.stat-label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
}

.level-badge {
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.level-badge.bronze {
  background: linear-gradient(135deg, #cd7f32, #b87333);
}

.level-badge.silver {
  background: linear-gradient(135deg, #c0c0c0, #a8a8a8);
}

.level-badge.gold {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
}

.level-badge.platinum {
  background: linear-gradient(135deg, #e5e4e2, #d3d3d3);
}

.level-badge.diamond {
  background: linear-gradient(135deg, #b9f2ff, #66d9ef);
}

.level-text {
  color: #333;
  font-size: 22rpx;
  font-weight: 600;
}

/* 章节标题 */
.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}

/* 会员权益部分 */
.benefits-section {
  margin-bottom: 32rpx;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.benefit-item {
  padding: 32rpx 24rpx;
  text-align: center;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.benefit-title {
  font-size: 26rpx;
  font-weight: 600;
  margin: 12rpx 0 8rpx;
}

.benefit-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

/* 菜单部分 */
.menu-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.menu-group {
  padding: 0;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  color: white;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-title {
  flex: 1;
  font-size: 28rpx;
}

.menu-extra {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.menu-badge {
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-note {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.menu-divider {
  height: 1rpx;
  background: rgba(255, 255, 255, 0.1);
  margin: 0 32rpx;
}

/* 权益弹窗 */
.benefit-popup {
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx 60rpx;
}

.popup-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.popup-content {
  margin-bottom: 40rpx;
}

.popup-desc {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

.benefit-rules {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
}

.rules-title {
  color: #333;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.rules-content {
  color: #666;
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
  display: block;
}

.rules-content:last-child {
  margin-bottom: 0;
}

.popup-actions {
  display: flex;
}

.popup-actions .van-button {
  flex: 1;
}